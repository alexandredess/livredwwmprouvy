{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
    <h1>Mes livres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Résumé</th>
                <th>Couverture</th>
                <th>Nom Auteur</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.resume }}</td>
                    <td>{{ livre.couverture }}</td>
                    <td>{{ livre.auteur.nom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
